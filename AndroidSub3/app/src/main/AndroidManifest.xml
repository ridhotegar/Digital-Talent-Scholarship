<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ridhotegar.androidsub3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidSub2">

        <activity
            android:name="com.ridhotegar.androidsub3.ui.theme.ThemeActivity"
            android:exported="false" />

        <activity
            android:name="com.ridhotegar.androidsub3.ui.favorite.FavoriteActivity"
            android:exported="false" />

        <activity
            android:name="com.ridhotegar.androidsub3.ui.detail.DetailActivity"
            android:exported="false" />

        <activity
            android:name="com.ridhotegar.androidsub3.ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>